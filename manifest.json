{
    "name": "Social Blockr",
    "description": "Restricting Social Media Content on Chrome",
    "version": "0.1.0",
    "manifest_version": 3,
    "permissions": [
    "storage"
    ],
    "icons": [
        { 
        "16": "icon16x16.png",
        "32": "icon32x32.png",
        "48": "icon48x48.png",
        "128": "icon128x128.png"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16x16.png",
            "32": "icon32x32.png",
            "48": "icon48x48.png",
            "128": "icon128x128.png"
        }
    },
    "permissions": ["tabs"],
    
    "content_scripts": [
        { 
            "matches": ["<all_urls>"],
            "js": ["script.js"]
        }
    ]
}
